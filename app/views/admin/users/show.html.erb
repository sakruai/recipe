<div class='container' >
  <div class='row'>
    <div class='col'>
     <table>
      <thead>
        <h2><%= @user.name %>さんの会員詳細</h2>
      </thead>
      <tbody>
       <tr>
         <td>会員ID</td>
         <td><%= @user.id %></td>
       </tr>
         <td>氏名</td>
         <td><%= @user.name %></td>
       </tr>
       <tr>
         <td>メールアドレス</td>
         <td><%= @user.email %></td>
       </tr>
       <tr>
         <td>会員ステータス</td>
         <td><% if @user.is_active %>
          有効
          <% else %>
          退会済み
          <% end %></td>
       </tr>
      </tbody>
     </table>
     <div>
      <%= link_to "編集する", edit_admin_user_path(@user.id) %>
     </div>
   </div>
  </div>
</div>
