<!DOCTYPE html>
<html>
  <head>
    <title>Recipe</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/e512670c76.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <div class="logo_area">
    
      </div>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                 <%= link_to '投稿フォーム', new_list_path %>
              </li>
               <li class="nav-item">
                 <%= link_to 'マイページ', user_path(current_user.id) %>
              </li>
              <li class="nav-item">
                 <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-secondary' %>
              </li>
            <% else %>  
              <li class="nav-item">
                 <%= link_to "新規登録", new_user_registration_path, class: 'btn btn-secondary' %>
              </li>
              <li class="nav-item">
                 <%= link_to "会員ログイン",user_session_path, class: 'btn btn-secondary'%>
              </li>
              <li class="nav-item">
                <%= link_to "管理者ログイン",admin_session_path, class: 'btn btn-secondary'%>
              </li>
            <% end %>
            </ul>
  
  </header>
    <%= yield %>
  </body>
</html>
