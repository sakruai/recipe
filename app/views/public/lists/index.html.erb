<div class='container' >
  <div class='row'>
    <div class='col'>
    
    <div class>
      <h2>レシピ一覧</h2>
        <table class="table-hover">
         <thead>
          <tr>
            <th></th>
            <th>レシピ名</th>
            <th>値段</th>
            <th>説明</th>
            <th>タグ名</th>
            <th>ユーザーネーム</th>
            <th></th>
          </tr>
         </thead>
         <% @lists.each do |list| %>
          <tbody>
            <tr>
               <th><%= image_tag list.get_image, :size =>'100x100' %></th>
               <th><%= link_to list.name, list_path(list.id)%></th>
               <th><%= list.price %></th>
               <th><%= list.explanation %></th>
               <th><%= list.category %></th>
               <th><%= list.user.name %></th>
               <th><%= link_to "#{list.post_comments.count} コメント", list_path(list.id) %></th>
            </tr>
          </tbody>
          <% end %>
    </div>
  </div>
 </div>
</div>
    
